@model AdvancedRepository.Models.CustomerModel

@{
	ViewBag.Title = "Index";
}

<form action="/Category/Index" method="post">
	<input type="text" placeholder="Ara.." name="name">
	<button type="submit" class="btn btn-success">Arama</button>
</form>
<hr />

<a href="/Customers/Ekle" class="btn btn-info">Kategori Ekle</a>
<a href="/Customers/Sec" class="btn btn-warning ">Kategori Sec</a>
<div class="container">
	<div class="row">
		<table class="table table-striped table-bordered table-hover">
			<thead class="text-center">
				<tr>
					<th>@Html.DisplayNameFor(x => x.customers.CustomerID)</th>
					<th>@Html.DisplayNameFor(x => x.customers.CompanyName)</th>
					<th>@Html.DisplayNameFor(x => x.customers.Country)</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody class="text-center">
				@foreach (var item in Model.clist)
				{
	<tr>
		<td>@item.CustomerID</td>
		<td>@item.CompanyName</td>
		<td>@item.City</td>
		<td> <a href="/Customers/Detay/@item.CustomerID" class="btn btn-success">Detay</a></td>
		<td> <a href="/Customers/Guncel/@item.CustomerID" class="btn btn-primary">Güncelle</a></td>
		<td> <a href="/Customers/Sil/@item.CustomerID" class="btn btn-danger">Sil</a></td>

	</tr>
}
			</tbody>
		</table>
	</div>
</div>


