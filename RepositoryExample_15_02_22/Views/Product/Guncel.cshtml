@model RepositoryExample_15_02_22.Models.ProductsModel
@{
	ViewBag.Title = "Ekle";
}

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	<div class="form-horizontal m-2">

		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group fw-bold">
			@Html.LabelFor(m => m.products.ProductID, htmlAttributes: new { @class = "control-label cod-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(m => m.products.ProductID, new { htmlAttributes = new { @class = "form-control" } })
			</div>
		</div>
		<div class="form-group fw-bold">
			@Html.LabelFor(m => m.products.ProductName, htmlAttributes: new { @class = "control-label cod-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(m => m.products.ProductName, new { htmlAttributes = new { @class = "form-control" } })
			</div>
		</div>
		<div class="form-group fw-bold">
			@Html.LabelFor(m => m.products.QuantityPerUnit, htmlAttributes: new { @class = "control-label cod-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(m => m.products.QuantityPerUnit, new { htmlAttributes = new { @class = "form-control" } })
			</div>
		</div>


		<div class="form-group fw-bold">
			@Html.LabelFor(m => m.products.CategoryID, htmlAttributes: new { @class = "control-label cod-md-2" })
			<div class="col-md-10">
				@Html.DropDownListFor(m => m.products.CategoryID, Model.selectLists, new { htmlAttributes = new { @class = "form-control" } })
			</div>
		</div>

		<div class="form-group fw-bold">
			@Html.LabelFor(m => m.products.Discontinued, htmlAttributes: new { @class = "control-label cod-md-2" })
			<div class="col-md-10">
				@Html.CheckBoxFor(m => m.products.Discontinued, new { htmlAttributes = new { @class = "form-control" } })
			</div>
		</div>
	</div>
	<br />
	<div class="form-group">
		<input type="submit" value="Güncelle" class="btn btn-primary" />
		<a href="/Product/Index" class="btn btn-success">Listeye Geri Don</a>
	</div>
}
