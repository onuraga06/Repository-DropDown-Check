@model RepositoryExample_15_02_22.Models.ProductsModel
@{ ViewBag.Title = "Index"; }

<form action="/Category/Index" method="post">
	<input type="text" placeholder="Ara.." name="name">
	<button type="submit" class="btn btn-success">Arama</button>
</form>
<hr />

<a href="/Product/Ekle" class="btn btn-info">Kategori Ekle</a>
<a href="/Product/Sec" class="btn btn-warning ">Kategori Sec</a>
<div class="container">
	<div class="row">
		<table class="table table-striped table-bordered table-hover">
			<thead class="text-center">
				<tr>
					<th>@Html.DisplayNameFor(x => x.products.ProductID)</th>
					<th>@Html.DisplayNameFor(x => x.products.ProductName)</th>
					<th>@Html.DisplayNameFor(x => x.products.QuantityPerUnit)</th>
					<th>Kategori</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody class="text-center">
				@foreach (var item in Model.pList)
				{
	<tr>
		<td>@item.ProductID</td>
		<td>@item.ProductName</td>
		<td>@item.QuantityPerUnit</td>
		<td>@item.Categories.CategoryName</td>
		<td> <a href="/Product/Detay/@item.ProductID" class="btn btn-success">Detay</a></td>
		<td> <a href="/Product/Guncel/@item.ProductID" class="btn btn-primary">Güncelle</a></td>
		<td> <a href="/Product/Sil/@item.ProductID" class="btn btn-danger">Sil</a></td>

	</tr>
				}
			</tbody>
		</table>
	</div>
</div>





